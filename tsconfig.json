{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "#main/*": ["packages/main/*"],
      "#interfaces/*": ["packages/interfaces/*"],
      "#services": ["packages/services/index.ts"],
      "#logger": ["packages/logger/index.ts"],
      "#ts-belt-extra": ["packages/ts-belt-extra/index.ts"],
      "#test-helpers/*": ["packages/test-helpers/*"]
    }
  },
  "exclude": ["examples", "node_modules"]
}
